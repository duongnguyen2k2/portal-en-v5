@model API.Areas.Admin.Models.USUsers.ChangePassword
@{
    ViewData["Title"] = "Đổi mật khẩu";
    string ControllerName = this.ViewContext.RouteData.Values["controller"].ToString();
}
<div class="row justify-content-md-center">
    <div class="col col-md-6">
        <div class="card">
            <div class="card-header">
                <h4><i class="fas fa-user-shield"></i> @ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <div asp-validation-summary="All" class="text-danger"></div>
                <partial name="_PartialMsgInfoAdmin" />
                <form asp-controller="@ControllerName" asp-action="ChangePassword" method="post">
                    <div class="form-group">
                        <label asp-for="OldPassword">Mật khẩu cũ <sup class="text-danger"> (*)</sup></label>
                        <input type="password" class="form-control" asp-for="OldPassword" name="OldPassword">
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPassword">Mật khẩu Mới <sup class="text-danger"> (*)</sup></label>
                        <input type="password" class="form-control" asp-for="NewPassword" name="NewPassword">
                    </div>
                    <div class="form-group">
                        <label asp-for="RePassword">Nhập lại mật khẩu <sup class="text-danger"> (*)</sup></label>
                        <input type="password" class="form-control" asp-for="RePassword" name="RePassword">
                    </div>
                    <input type="hidden" class="form-control" asp-for="Id" name="Id">
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary" name="SaveItem">
                            <i class="fas fa-exchange-alt"></i> Đổi mật khẩu
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@if (TempData["MessageSuccess"] != null && TempData["MessageSuccess"].ToString() != "")
{
    @section Scripts {
    <script type="text/javascript">
        jQuery(document).ready(function ($) {            
            if(confirm("Vui lòng đăng nhập lại với mật khẩu mới!") == true) {
                window.location.href = "/Admin/Account/Logout";
            }else {
                setTimeout(() => {
                    console.log("Hệ thống tự động đăng xuất sau 3 giây.");                    
                    window.location.href = "/Admin/Account/Logout";
                }, 3000);
            }
        });

        </script>
    }
}
