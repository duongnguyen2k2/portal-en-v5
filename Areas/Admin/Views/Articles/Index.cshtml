@model API.Areas.Admin.Models.Articles.ArticlesModel
@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json;
@using API.Areas.Admin.Models.DMCoQuan;
@{
    Layout = "_layoutAdmin";
    ViewData["Title"] = "Quản lý tin tức";
    string ControllerName = this.ViewContext.RouteData.Values["controller"].ToString();
    int IdCoQuan = int.Parse(Context.Session.GetString("IdCoQuan"));
    string TenCoQuan = Context.Session.GetString("TenCoQuan");
    int IdGroup = int.Parse(Context.Session.GetString("IdGroup"));
    int IdUser = int.Parse(Context.Session.GetString("IdUser"));
    string str_class_tr = "";
    DMCoQuan ItemCoQuan = JsonConvert.DeserializeObject<DMCoQuan>(Context.Session.GetString("ThongTinCoQuan"));
    Boolean flagEdit = false;
    string version = DateTime.Now.ToString("yyyyMMddhh");

}

<div class="card">
    <div class="card-header">
        <h4>
            <i class="far fa-newspaper"></i> @ViewData["Title"]
            <span class="float-right">Tổng dòng: <strong>@if (Model.ListItems != null && Model.ListItems.Count() > 0)
            {<span>@Model.ListItems[0].TotalRows</span>}
            else
            {<span>0</span>}</strong></span>
        </h4>
    </div>
    <div class="card-body">
        <partial name="_PartialMsgInfoAdmin" />
        <form asp-controller="@ControllerName" asp-action="Index" method="get" id="SearchFrorm">
            <div class="row">

                <div class="col-lg-3">
                    <div class="form-group">
                        <select asp-for="SearchData.CatId" name="CatId" class="form-control" asp-items="Model.ListItemsDanhMuc"></select>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="row">
                        <div class="col-12 col-md-4">
                            <input asp-for="SearchData.Keyword" name="Keyword" placeholder="Tìm kiếm" class="form-control" />
                        </div>
                        <div class="col-12 col-md-3">
                            <select asp-for="SearchData.Status" name="Status" class="form-control" asp-items="Model.ListItemsStatus"></select>
                        </div>
                        <div class="col-12 col-md-5">
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Tìm Kiếm</button>
                                <a class="btn btn-primary" data-toggle="collapse" href="#multiCollapseExample1" role="button" aria-expanded="false" aria-controls="multiCollapseExample1"><i class="fas fa-cogs"></i> Nâng cao</a>
                                <button data-toggle="modal" data-target="#LoaddingModal" data-whatever="Đang tải dữ liệu. Xin vui lòng đợi." id="ExportExcel" type="button" class="btn btn-info"><i class="far fa-file-excel"></i> Báo cáo</button>
                            </div>
                        </div>
                        
                    </div>
                </div>

            </div>
            <div class="collapse multi-collapse" id="multiCollapseExample1">
                <div class="row">
                        @* <div>
                            <label>Cờ test: @ItemCoQuan.Code</label>
                        </div> *@
                    
                        @if (!string.IsNullOrEmpty(ItemCoQuan.Code) && ItemCoQuan.Code.Equals("ttvhdl.vhttdl.daklak.gov.vn", StringComparison.OrdinalIgnoreCase))
                        {
                            <div class="col">
                            <div class="form-group">
                                <label>Trạng thái thanh toán</label>
                                <select asp-for="SearchData.PaymentId" name="PaymentId" id="PaymentId" class="form-control">
                                    <option value="0">Tất cả</option>
                                    <option value="1">Đã thanh toán</option>
                                    <option value="2">Chưa thanh toán</option>
                                </select>
                            </div>
                        </div> 
                        }

                    <div class="col">
                        <div class="form-group">
                            <label>Tác Giả</label>
                            <select asp-for="SearchData.AuthorId" name="AuthorId" class="form-control" asp-items="Model.ListItemsAuthors"></select>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label>Người đăng</label>
                            <select asp-for="SearchData.CreatedBy" name="CreatedBy" class="form-control" asp-items="Model.ListItemsCreatedBy"></select>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label>Từ Ngày</label>
                            <div class="input-group date" id="ShowStartDate" data-target-input="nearest">
                                <input asp-for="SearchData.ShowStartDate" name="ShowStartDate" type="text" class="form-control datetimepicker-input" data-target="#ShowStartDate" id="ShowShowStartDate" />
                                <div class="input-group-append" data-target="#ShowStartDate" data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label>Đến Ngày</label>
                            <div class="input-group date" id="ShowEndDate" data-target-input="nearest">
                                <input asp-for="SearchData.ShowEndDate" name="ShowEndDate" type="text" class="form-control datetimepicker-input" data-target="#ShowEndDate" id="ShowShowEndDate" />
                                <div class="input-group-append" data-target="#ShowEndDate" data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </form>
        <div class="row">
            <div class="col-lg-12">

                <table class="table table-bordered table-striped table-hover ">
                    <thead>
                        <tr>
                            <th width="50px" class="text-center">ID</th>
                            <th>Tên bài viết</th>
                            @if (IdCoQuan == 1)
                            {
                                <th>Cơ quan</th>
                            }
                            <th width="130px">Thông tin</th>
                            <th width="130px">Trạng Thái</th>                                               
                            <th width="130px" class="btn-contain">
                                <a asp-controller="@ControllerName" asp-action="SaveItem" class="btn btn-primary">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                                      <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                                    </svg>
                                    THÊM MỚI
                                </a>
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model.ListItems == null || Model.ListItems.Count() == 0)
                        {
                            <tr>
                                <td colspan="10" class="text-center">
                                    <label>Không có dữ liệu!</label>
                                </td>
                            </tr>
                        }
                        else
                        {
                            for (int i = 0; i < Model.ListItems.Count(); i++)
                            {
                                @if (Model.ListItems[i].RootNewsFlag)
                                {
                                    str_class_tr = "table-warning";
                                }
                                else
                                {
                                    str_class_tr = "";
                                }

                                @if (IdGroup == 6 || (IdGroup == 3 && ItemCoQuan.MetadataCV.FlagStatusArticle==0))
                                {
                                    if (Model.ListItems[i].CreatedBy == IdUser)
                                    {
                                        flagEdit = true;
                                    }
                                }                               
                                else
                                {
                                    flagEdit = true;
                                }
                                <tr class="@str_class_tr">
                                    <td width="50px" class="text-center">@Model.ListItems[i].Id</td>
                                    <td>
                                        <a onclick="GetItemDetail('@Model.ListItems[i].Ids',@IdGroup)"><strong>@Model.ListItems[i].Title</strong></a><br />
                                        <small>Danh Mục: <span class="badge badge-primary">@Model.ListItems[i].Category</span> </small>
                                        @if (ItemCoQuan.MetadataCV.flagArticleQuantityImage == 1){
                                        <span class="pl-2">
                                            <i class="far fa-images"></i> @Model.ListItems[i].QuantityImage (Ảnh)
                                        </span>
                                        }
                                        @if (ItemCoQuan.MetadataCV.SmartVoiceTokenID !=null && ItemCoQuan.MetadataCV.SmartVoiceTokenID.Trim() != "" )
                                        {
                                            <span id="create_audio_@Model.ListItems[i].Id" onclick="CreateAudio(@Model.ListItems[i].Id,'@Model.ListItems[i].Ids')" class="badge badge-pill badge-primary create_article_audio pl-2">
                                                <i class="fas fa-file-audio"></i> 
                                                @if(Model.ListItems[i].FileItem!=null && Model.ListItems[i].FileItem!="")
                                                {
                                                    <a>Tạo <strong class="text-danger">Lại</strong> audio</a>
                                                }else{
                                                    <a>Tạo file audio</a>
                                                }
                                            </span>
                                            <span id="loading_audio_@Model.ListItems[i].Id" class="badge badge-pill badge-info pl-2 create_article_audio" style="display:none">
                                                <i class="fas fa-spinner fa-spin"></i> Đang Tạo file..
                                            </span>
                                        }
                                        
                                            <div>
                                                @if (Model.ListItems[i].AuthorName != null && Model.ListItems[i].AuthorName != "")
                                                {
                                                    <strong>Tác giả:</strong> <i>@Model.ListItems[i].AuthorName</i>
                                                    @if (Model.ListItems[i].TenPhongBan != null && Model.ListItems[i].TenPhongBan != "")
                                                    {
                                                        <span>(@Model.ListItems[i].TenPhongBan)</span>
                                                    }
                                                }
                                                <strong>Người tạo:</strong> <i>@Model.ListItems[i].CreatedByFullName</i>
                                                @if (Model.ListItems[i].ModifiedByFullName != null && Model.ListItems[i].ModifiedByFullName != "")
                                                {
                                                            
                                                    <strong>,Cập nhật:</strong> <i>@Model.ListItems[i].ModifiedByFullName</i>
                                                }
                                                 
                                            </div>
                                       
                                    </td>
                                    @if (IdCoQuan == 1)
                                    {
                                        <td>@Model.ListItems[i].TenCoQuan</td>
                                    }
                                    <td>
                                       <span class="">@Model.ListItems[i].PublishUpShow</span> <br />                                        
                                        <a class="pr-3" asp-controller="@ControllerName" asp-action="ViewLog" asp-route-id="@Model.ListItems[i].Ids"><i class="fas fa-binoculars"></i> Lịch Sử</a>
                                        @if (ItemCoQuan.MetadataCV.FlagComment == 1 && Model.ListItems[i].Comment==true)
                                        {
                                            <br />
                                            <a asp-controller="@ControllerName" asp-action="ViewComment" asp-route-id="@Model.ListItems[i].Ids"><i class="fas fa-comments"></i> Bình Luận</a>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="article_status status_item">
                                            <span class="article_status_text">Trạng thái: </span>
                                            @if (@Model.ListItems[i].Status)
                                            {
                                                <a onclick="UpdateStatus('@ControllerName','@Model.ListItems[i].Ids',false)" class="fas fa-check text-primary" aria-hidden="true"></a>
                                            }
                                            else
                                            {
                                                <a onclick="UpdateStatus('@ControllerName','@Model.ListItems[i].Ids',true)" class="far fa-times-circle text-danger" aria-hidden="false"></a>
                                            }
                                        </div>

                                        <div class="article_status featured_item">
                                            <span class="article_status_text">Nổi bật:</span>
                                            @if (@Model.ListItems[i].Featured)
                                            {
                                                <a onclick="UpdateFeatured('@ControllerName','@Model.ListItems[i].Ids',false)" class="fas fa-star text-primary" aria-hidden="true"></a>
                                            }
                                            else
                                            {
                                                <a onclick="UpdateFeatured('@ControllerName','@Model.ListItems[i].Ids',true)" class="far fa-star text-danger" aria-hidden="false"></a>
                                            }
                                        </div>
                                        @if (ItemCoQuan.MetadataCV.FlagFeaturedHome.ToString() == "1")
                                        {
                                            <div class="article_status featuredhome_item">
                                                <span class="article_status_text">Thông báo:</span>
                                                @if (@Model.ListItems[i].FeaturedHome)
                                                {
                                                    <a onclick="UpdateFeaturedHome('@ControllerName','@Model.ListItems[i].Ids',false)" class="fas fa-check-circle text-primary" aria-hidden="true"></a>
                                                }
                                                else
                                                {
                                                    <a onclick="UpdateFeaturedHome('@ControllerName','@Model.ListItems[i].Ids',true)" class="far fa-times-circle text-danger" aria-hidden="false"></a>
                                                }
                                            </div>
                                        }
                                        
                                    </td>
                                                                        
                                   
                                    <td>
                                        @if(flagEdit){
                                            <ul class="list-inline action text-center">
                                                @if (Model.ListItems[i].RootNewsId > 0)
                                                {
                                                    if (Model.ListItems[i].RootNewsFlag == true)
                                                    {
                                                        <li class="list-inline-item"><a onclick="ShowUpdateArticlesTransfer('@Model.ListItems[i].Ids')"><i class="fas fa-cloud-download-alt"></i>Cập Nhật</a></li>
                                                    }
                                                    <li class="list-inline-item"><a data-toggle="modal" data-target="#DeleteModal" data-whatever="@Model.ListItems[i].Title" data-ids="@Model.ListItems[i].Ids"><i class="fa fa-trash"></i>Xóa</a></li>
                                                }
                                                else
                                                {
                                                    @if ((IdGroup == 3 && ItemCoQuan.MetadataCV.FlagStatusArticle == 0) && Model.ListItems[i].Status == true)
                                                    {

                                                    }
                                                    else
                                                    {
                                                        <li class="list-inline-item"><a asp-controller="@ControllerName" asp-action="SaveItem" asp-route-id="@Model.ListItems[i].Ids"><i class="fa fa-edit"></i>Sửa</a></li>
                                                        <li class="list-inline-item"><a data-toggle="modal" data-target="#DeleteModal" data-whatever="@Model.ListItems[i].Title" data-ids="@Model.ListItems[i].Ids"><i class="fa fa-trash"></i>Xóa</a></li>
                                                    }
                                                }

                                            </ul>
                                        }
                                        
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>

                </table>
                <form asp-controller="@ControllerName" asp-action="DeleteItem" id="AjaxDeleteForm"></form>
            </div>
            <div class="col-lg-12">
                @await Html.PartialAsync("_PartialPagination", Model.Pagination)
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="DetailArticle" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="article-title">Chi Tiết Bài Viết</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="article-content"><div class="text-center"><div class="lds-dual-ring"></div></div></div>
            </div>
            <div class="modal-footer " id="footer-detail-article">
                <div class="detail-audio-file" id="footer-detail-article-audio"></div>
                <input id="LinkDetail" />
                <button type="button" class="btn btn-secondary mr-1" data-dismiss="modal"><i class="fas fa-times"></i> Đóng</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="ArticlesTransfer" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="article-transfer-title">Chi Tiết Bài Viết Liên Thông</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger alert-dismissible fade show" style="display:none;" role="alert">
                    <div class="articlestransfer-alert-msg"></div>
                </div>
                <div id="article-transfer-content"><div class="text-center"><div class="lds-dual-ring"></div></div></div>
            </div>
            <div class="modal-footer " id="footer-detail-article-transfer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times"></i> Đóng</button>
            </div>
            <div class="loading-content" style="display:none;" id="articlestransfer-loading">
                <div class="loadding-bg"></div>
                <div class="lds-dual-ring"></div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="GetComplete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="article-transfer-title">Cập nhật Bài Viết Liên Thông</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger alert-dismissible fade show" style="display:none;" role="alert">
                    <div class="articlestransfer-alert-msg"></div>
                </div>
                <div id="trang-thai"></div>
            </div>
            <div class="modal-footer " id="footer-detail-article-transfer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times"></i> Đóng</button>
            </div>
            <div class="loading-content" style="display:none;" id="articlestransfer-loading">
                <div class="loadding-bg"></div>
                <div class="lds-dual-ring"></div>
            </div>
        </div>
    </div>
</div>
<style>
    .create_article_audio{
        width:130px;
    }
    .create_article_audio:hover{
        cursor:pointer;
    }
</style>
@section Scripts{
    <script src="~/lib/js/moment.js@("?v="+version)"></script>
    <script src="~/lib/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js@("?v="+version)"></script>
    <script type="text/javascript" src="~/lib/js/jquery.base64.min.js@("?v="+version)"></script>
    <script type="text/javascript" src="~/lib/js/jquery.binarytransport.js@("?v="+version)"></script>
    <script type="text/javascript" src="~/TemplatesAdmin/Default/js/admin-article.js@("?v="+version)"></script>
   
}