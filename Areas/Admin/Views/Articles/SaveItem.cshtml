@model API.Areas.Admin.Models.Articles.ArticlesModel
@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;
@using API.Areas.Admin.Models.USUsers;
@{
    if (Model.Item.Id == 0)
    {
        ViewData["Title"] = "Thêm mới Bài viết";
    }
    else
    {
        ViewData["Title"] = "Cập nhật Bài viết";
    }
    string ControllerName = this.ViewContext.RouteData.Values["controller"].ToString();
    string Link = "/" + Model.Item.Alias + "-" + Model.Item.Id + ".html";
    string Link_EN = "/" + Model.Item.Alias_EN + "-" + Model.Item.Id + ".html";
    string Str_Url = "/Admin/Articles/Index" + Context.Session.GetString("STR_Action_Link_" + ControllerName + "_" + Context.Request.Headers["UserName"]);
    int IdCoQuan = int.Parse(Context.Session.GetString("IdCoQuan"));

    USUsers ItemUSUsers = JsonConvert.DeserializeObject<USUsers>(Context.Session.GetString("Login"));
   
    string StrThongTinCoQuan = Context.Session.GetString("ThongTinCoQuan");
    API.Areas.Admin.Models.DMCoQuan.DMCoQuan ItemCoQuan = new API.Areas.Admin.Models.DMCoQuan.DMCoQuan();
    ItemCoQuan = JsonConvert.DeserializeObject<API.Areas.Admin.Models.DMCoQuan.DMCoQuan>(StrThongTinCoQuan);
    string version = DateTime.Now.ToString("yyyyMMddhh");
}
<link rel="stylesheet" href="~/lib/tinymce/css/tinymce.css@("?v="+version )" />
<div class="card">
    <div class="card-header">
        <h4>@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger"></div>
