                                    }
                                </div>
                                <p style="margin:10px 5px; cursor:pointer" class="text-primary" onclick="ThemFile()">
                                    <i class="fa fa-plus-square"></i> Thêm file
                                </p>
                            </fieldset>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label class="control-label"><strong>Nguồn Tin</strong></label>
                                <input type="text" name="LinkRoot" class="form-control" asp-for="Item.LinkRoot">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <fieldset class="scheduler-border">
                                <legend class="scheduler-border">Link Tin liên quan</legend>
