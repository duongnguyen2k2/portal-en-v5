                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="Item.CategoryTypeId">Loại Bài Viết</label>
                                <select asp-for="Item.CategoryTypeId" name="CategoryTypeId" class="form-control" asp-items="Model.ListCategoryType"></select>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group images-main">
                                <label>Hình đại diện</label>
                                <img src="@Model.Item.Images" class="Item_Images_Article_Preview" style="max-height:200px;">
