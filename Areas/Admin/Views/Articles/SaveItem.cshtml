                                    <div class="input-group-append" data-target="#PublishUpShow" data-toggle="datetimepicker">
                                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @if (IdCoQuan != 6 && IdCoQuan != 7)
                        {
                            @if (ItemCoQuan.MetadataCV.FlagAuthorText == 1)
                            {
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="Item.Author">Tác Giả</label>
                                        <input type="text" name="Author" class="form-control" asp-for="Item.Author">
                                    </div>
                                </div>

                            }
                            else if (ItemCoQuan.MetadataCV.FlagAuthorText == 2)
                            {
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="Item.Author">Tác Giả (Viết Tên)</label>
                                        <input type="text" name="Author" class="form-control" asp-for="Item.Author">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="Item.AuthorId">Tác Giả</label>
                                        <select asp-for="Item.AuthorId" name="AuthorId" class="form-control" asp-items="Model.ListItemsAuthors"></select>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="Item.AuthorId">Tác Giả</label>
                                        <select asp-for="Item.AuthorId" name="AuthorId" class="form-control" asp-items="Model.ListItemsAuthors"></select>
                                    </div>
                                </div>

                            }

                        }

                        @if (IdCoQuan == 6 || IdCoQuan == 7)
                        {
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="Item.Author">Tác Giả</label>
                                    <input type="text" name="Author" class="form-control" asp-for="Item.Author">
                                </div>
                            </div>
                        }
                

                
                    </div>
