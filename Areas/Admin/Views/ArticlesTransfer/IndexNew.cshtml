</div>

<style>
    .create_article_audio {
        width: 130px;
    }

        .create_article_audio:hover {
            cursor: pointer;
        }
</style>

@section Scripts{
    <script type="text/javascript">
        function GetItemDetail(Id) {
            $('#DetailArticle').modal('show');
            $.ajax({
                url: "/Admin/ArticlesTransfer/GetDetailTinBaiLienThong?Id=" + Id,
                method: 'GET',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result) {
                    $("#article-title").html(result.Title);
                    $('#article-content').html(result.FullText);
                    var str = `<div class="d-flex justify-content-between"> <div class="mr-3 w-50"> <input class="form-control" value="` + `/` + result.Alias + `-` + result.Id + `.html` + `" /> </div> <div class="">`;
                    str = str + '<button type="button" class="btn btn-secondary mr-2" data-dismiss="modal"><i class="fas fa-times"></i> Đóng</button><a onclick="TakeItem('+result.Id+')" class="btn btn-primary"><i class="fa fa-edit"></i> Thu thập bài viết</a>';

                    str = str + `</div></div>`;
                    $("#footer-detail-article").html(str);
                }
            });
        }

        function TakeItem(Id) {
            var conceptName = $('#aioConceptName').find(":selected").val();
            $.ajax({
                url: "/Admin/ArticlesTransfer/LayTinBai?Id=" + Id + "&IdCat=" + conceptName,
                method: 'GET',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result) {
                    $('#GetComplete').modal('show');
                    $('#trang-thai').html('<h3> ' + result + ' </h3>')
                }
            });
        }


        $('document').ready(function () {

            $('#DetailArticle').on('hidden.bs.modal', function (e) {
                $("#article-title").html("Chi Tiết Bài Viết");
                $("#article-content").html('<div class="text-center"></div>');
                var str = '<button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times"></i> Đóng</button>';
                $("#footer-detail-article").html(str);
            });


        });


    </script>
    <script src="~/lib/js/moment.js"></script>
    <script src="~/lib/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <script type="text/javascript" src="~/lib/js/jquery.base64.min.js"></script>
    <script type="text/javascript" src="~/lib/js/jquery.binarytransport.js"></script>
    @* <script type="text/javascript" src="~/TemplatesAdmin/Default/js/admin-article.js"></script> *@
}