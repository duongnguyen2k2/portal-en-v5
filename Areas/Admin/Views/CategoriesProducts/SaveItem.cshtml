@model API.Areas.Admin.Models.CategoriesProducts.CategoriesProductsModel
@{
    Layout = "_layoutAdmin";
    if (Model.Item.Id == 0)
    {
        ViewData["Title"] = "Thêm mới Danh Mục";
    }
    else
    {
        ViewData["Title"] = "Cập nhật Danh Mục";
    }
    string ControllerName = this.ViewContext.RouteData.Values["controller"].ToString();
    string Link = "/loai-san-pham/" + Model.Item.Alias + "-" + Model.Item.Id + ".html";
}
<link rel="stylesheet" href="~/lib/tinymce/css/tinymce.css" />


<div class="container-fluid" id="app-categoriesproducts">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="/Admin">Trang Chủ</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>               
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12"> 
            <div class="card" id="my-card">
               
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <partial name="_PartialMsgInfoAdmin" />
                    <form asp-controller="@ControllerName" asp-action="SaveItem" enctype="multipart/form-data" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label" asp-for="Item.Title">Tên</label>
                                    <input asp-for="Item.Title" class="form-control Changetitle namepr" />
                                    <span asp-validation-for="Item.Title" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="form-label" asp-for="Item.Code">Code</label>
                                    <input asp-for="Item.Code" class="form-control" />                                    
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label class="form-label" asp-for="Item.ParentId">Danh mục cha <sup class="text-danger"> (*)</sup></label>
                                    <select asp-for="Item.ParentId" class="form-control" asp-items="Model.ListItemsDanhMuc"></select>
                                </div>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-lg-3">
                                <label class="form-label">&nbsp;</label>
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox custom-control-inline">
                                        <input asp-for="Item.Status" class="custom-control-input" />
                                        <label class="custom-control-label" asp-for="Item.Status">Trạng Thái</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <label class="form-label">&nbsp;</label>
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox custom-control-inline">
                                        <input asp-for="Item.Featured" class="custom-control-input" />
                                        <label class="custom-control-label" asp-for="Item.Featured">Nổi Bật</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label asp-for="Item.Ordering" class="form-label"> Sắp Xếp</label>
                                    <input asp-for="Item.Ordering" class="form-control" />
                                    <span asp-validation-for="Item.Ordering" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label asp-for="Item.Hits" class="form-label">Lượt truy cập</label>
                                    <input asp-for="Item.Hits" class="form-control" />
                                    <span asp-validation-for="Item.Hits" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group images-main">
                                    <label>Hình đại diện</label>
                                    <img src="@Model.Item.Images" class="Item_Images_Main_Preview" style="max-height:200px;">
                                    <input type="hidden" id="Item_Images_Main" class="form-control" asp-for="Item.Images">
                                    <a onclick="ShowManagerFile('Item_Images_Main')" class="btn btn-primary">Chọn hình (262px*340px)</a>
                                    <a onclick="ViewImageMain('Item_Images_Main')"> <i class="fas fa-eye"></i> Xem ảnh</a>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Item.Introtext" class="form-label">Mô tả Ngắn</label>
                                    <textarea asp-for="Item.Introtext" class="form-control"></textarea>
                                </div>
                            </div>

                        </div>


                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Item.Description" class="form-label">Mô tả</label>
                                    <textarea asp-for="Item.Description" class="full-textarea form-control"></textarea>
                                </div>
                            </div>

                        </div>

                        <div class="row">

                            <div class="col-4">
                                <div class="form-group">
                                    <label class="form-label" asp-for="Item.MetadataCV.MetaTitle">Meta Title</label>
                                    <input type="text" class="form-control" asp-for="Item.MetadataCV.MetaTitle">
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label class="form-label" asp-for="Item.MetadataCV.MetaH1">Meta H1</label>
                                    <input type="text" class="form-control" asp-for="Item.MetadataCV.MetaH1">
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label class="form-label" asp-for="Item.MetadataCV.MetaH3">Meta H3</label>
                                    <input type="text" class="form-control" asp-for="Item.MetadataCV.MetaH3">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label" asp-for="Item.Metadesc"></label>
                                    <textarea asp-for="Item.Metadesc" class="form-control"></textarea>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label" asp-for="Item.Metakey"></label>
                                    <textarea asp-for="Item.Metakey" class="form-control"></textarea>
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label class="form-label">Link Danh mục tin tức</label>
                                    <input readonly class="form-control" value="@Link" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <button type="submit" class="btn btn-primary" name="SaveItem" value="Lưu">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-save2" viewBox="0 0 16 16">
                                        <path d="M2 1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H9.5a1 1 0 0 0-1 1v4.5h2a.5.5 0 0 1 .354.854l-2.5 2.5a.5.5 0 0 1-.708 0l-2.5-2.5A.5.5 0 0 1 5.5 6.5h2V2a2 2 0 0 1 2-2H14a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h2.5a.5.5 0 0 1 0 1H2z" />
                                    </svg> Lưu lại
                                </button>
                                <a class="btn btn-danger" asp-controller="@ControllerName" asp-action="Index">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-double-left" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M8.354 1.646a.5.5 0 0 1 0 .708L2.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z" />
                                        <path fill-rule="evenodd" d="M12.354 1.646a.5.5 0 0 1 0 .708L6.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z" />
                                    </svg> Quay Lại
                                </a>
                            </div>
                        </div>
                        <input type="hidden" class="form-control" asp-for="Item.Id">
                        <input type="hidden" class="form-control" asp-for="Item.Ids">

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_PartialTinymce" />
@section Scripts{
    <script src='~/lib/tinymce/tinymce.min.js' referrerpolicy="origin"></script>
    <script src='/lib/tinymce/js/tinymce_config.js' referrerpolicy="origin"></script>
}