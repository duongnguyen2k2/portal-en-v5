@model API.Areas.Admin.Models.DocumentRefersCategories.DocumentRefersCategoriesModel
@{
    if (Model.Item.Id == 0)
    {
        ViewData["Title"] = "Thêm mới Tài Liệu họp";
    }
    else
    {
        ViewData["Title"] = "Cập nhật Tài Liệu họp";
    }
    string ControllerName = this.ViewContext.RouteData.Values["controller"].ToString();
}

<div class="card">
    <div class="card-header">
        <h4>@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-controller="@ControllerName" asp-action="SaveItemTaiLieuHop" enctype="multipart/form-data" method="post">
            <div class="form-group">
                <label asp-for="Item.Title">Tên <sup class="text-danger"> (*)</sup></label>
                <input type="text" class="form-control" asp-for="Item.Title" name="Title">
            </div>
            
            <div class="form-group">
                <div class="custom-control custom-checkbox custom-control-inline">
                    <input asp-for="Item.Status" name="Status" class="custom-control-input" />
                    <label class="custom-control-label" asp-for="Item.Status">Trạng Thái</label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Item.Description">Mô tả</label>
                <textarea asp-for="Item.Description" name="Description" class="form-control"></textarea>
            </div>

            <button type="submit" class="btn btn-primary" name="SaveItemTaiLieuHop" value="Lưu">
                <i class="fas fa-save"></i> Lưu lại
            </button>

            <a class="btn btn-info" asp-controller="@ControllerName" asp-action="IndexTaiLieuHop"><i class="fas fa-backward"></i> Hủy</a>
            <input type="hidden" class="form-control" asp-for="Item.Id" name="Id">
            <input type="hidden" class="form-control" asp-for="Item.Ids" name="Ids">
            <input type="hidden" class="form-control" asp-for="Item.MatKhau" name="MatKhau">

        </form>
    </div>
</div>

