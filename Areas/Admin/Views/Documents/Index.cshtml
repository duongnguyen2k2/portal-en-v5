@model API.Areas.Admin.Models.Documents.DocumentsModel
@{
    Layout = "_layoutAdmin";
    ViewData["Title"] = "Quản lý văn bản";
    string ControllerName = this.ViewContext.RouteData.Values["controller"].ToString();
}

<div class="card">
    <div class="card-header">
        <h4>
            <i class="fas fa-table"></i> @ViewData["Title"]
            <span class="float-right">Tổng dòng: <strong>@if (Model.ListItems != null && Model.ListItems.Count() > 0){<span>@Model.ListItems[0].TotalRows</span>}else{<span>0</span>}</strong></span>
        </h4>
    </div>
    <div class="card-body">
        <partial name="_PartialMsgInfoAdmin" />
        <form asp-controller="@ControllerName" asp-action="Index" method="get">
            <div class="row">
                <div class="col-lg-3">
                    <div class="form-group">
                        <select asp-for="SearchData.CatId" name="CatId" class="form-control" asp-items="Model.ListDocumentsCategories"></select>
                    </div>
                </div>
                <div class="col-lg-7">

                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <input asp-for="SearchData.Keyword" name="Keyword" placeholder="Tìm kiếm" class="form-control" />
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Tìm Kiếm</button>
                                <a class="btn btn-primary" data-toggle="collapse" href="#multiCollapseExample1" role="button" aria-expanded="false" aria-controls="multiCollapseExample1"><i class="fas fa-cogs"></i> Nâng cao</a>
                            </div>

                        </div>
                    </div>
                </div>
               
            </div>
            <div class="collapse multi-collapse" id="multiCollapseExample1">
                <div class="row">

                    <div class="col">
                        <div class="form-group">
                            <label>Lĩnh Vực</label>
                            <select asp-for="SearchData.FieldId" name="FieldId" class="form-control" asp-items="Model.ListDocumentsField"></select>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label>Cấp ban hành</label>
                            <select asp-for="SearchData.TypeId" name="TypeId" class="form-control" asp-items="Model.ListDocumentsType"></select>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label>Từ Ngày</label>
                            <div class="input-group date" id="ShowStartDate" data-target-input="nearest">
                                <input asp-for="SearchData.ShowStartDate" name="ShowStartDate" type="text" class="form-control datetimepicker-input" data-target="#ShowStartDate" id="ShowShowStartDate" />
                                <div class="input-group-append" data-target="#ShowStartDate" data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label>Đến Ngày</label>
                            <div class="input-group date" id="ShowEndDate" data-target-input="nearest">
                                <input asp-for="SearchData.ShowEndDate" name="ShowEndDate" type="text" class="form-control datetimepicker-input" data-target="#ShowEndDate" id="ShowShowEndDate" />
                                <div class="input-group-append" data-target="#ShowEndDate" data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </form>
        <div class="row">
            <div class="col-lg-12">

                <table class="table table-bordered table-striped table-hover ">
                    <thead>
                        <tr>
                            <th rowspan="2" width="50px" class="text-center align-middle">STT</th>
                            <th rowspan="2" class="align-middle">Số ký hiệu </th>
                            <th rowspan="2" class="align-middle">Trích Yếu </th>
                            <th colspan="2" class="text-center">Ngày</th>
                            <th rowspan="2" width="100px" class="align-middle">Trạng Thái</th>
                            <th rowspan="2" width="130px" class="btn-contain align-middle">
                                <a asp-controller="@ControllerName" asp-action="SaveItem" class="btn btn-primary">THÊM MỚI</a>
                            </th>
                        </tr>
                        <tr>
                            <th>Ban Hành</th>
                            <th>Hiệu Lực</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model.ListItems == null || Model.ListItems.Count() == 0)
                        {
                            <tr>
                                <td colspan="8" class="text-center">
                                    <label *ngIf="flagListitems==2">Không có dữ liệu!</label>
                                </td>
                            </tr>
                        }
                        else
                        {
                            for (int i = 0; i < Model.ListItems.Count(); i++)
                            {
                                <tr>
                                    <td width="50px" class="text-center">@(i + 1)</td>
                                    <td><span data-toggle="tooltip" data-placement="top" title="@Model.ListItems[i].Title">@Model.ListItems[i].Code</span> <a target="_blank" href="@Model.ListItems[i].Link" class="fas fa-cloud-download-alt"></a></td>
                                    <td>@Html.Raw(Model.ListItems[i].Introtext)
                                        @if (Model.ListItems[i].ListFile != null && Model.ListItems[i].ListFile.Count() > 0)
                                        {
                                            <ul>
                                                @for (int j = 0; j < Model.ListItems[i].ListFile.Count(); j++)
                                                {
                                                    
                                                            <li class="">
                                                                <a target="_blank" href="@Model.ListItems[i].ListFile[j].FilePath"> 
                                                                    @if( Model.ListItems[i].ListFile[j].Title==null || Model.ListItems[i].ListFile[j].Title == "")
                                                                    {
                                                                        <span>Phụ lục @j</span>
                                                                    }
                                                                    else{
                                                                        <span>@Model.ListItems[i].ListFile[j].Title</span>                                                        
                                                                    }                                                                
                                                                </a>
                                                            </li>
                                                    

                                                }
                                            </ul>
                                        }
                                    </td>
                                    <td>@Model.ListItems[i].IssuedDate.ToString("dd/MM/yyyy")</td>
                                    <td>@Model.ListItems[i].EffectiveDate.ToString("dd/MM/yyyy")</td>

                                    <td class="text-center">
                                        <div class="article_status status_item">
                                            <span class="article_status_text">Trạng thái: </span>
                                            @if (@Model.ListItems[i].Status)
                                            {
                                                <a onclick="UpdateStatus('@ControllerName','@Model.ListItems[i].Ids',false)" class="fas fa-check text-primary" aria-hidden="true"></a>
                                            }
                                            else
                                            {
                                                <a onclick="UpdateStatus('@ControllerName','@Model.ListItems[i].Ids',true)" class="far fa-times-circle text-danger" aria-hidden="false"></a>
                                            }
                                        </div>

                                        <div class="article_status featured_item">
                                            <span class="article_status_text">Nổi bật:</span>
                                            @if (@Model.ListItems[i].Featured)
                                            {
                                                <a onclick="UpdateFeatured('@ControllerName','@Model.ListItems[i].Ids',false)" class="fas fa-star text-primary" aria-hidden="true"></a>
                                            }
                                            else
                                            {
                                                <a onclick="UpdateFeatured('@ControllerName','@Model.ListItems[i].Ids',true)" class="far fa-star text-danger" aria-hidden="false"></a>
                                            }
                                        </div>

                                        <div class="article_status featuredhome_item">
                                            <span class="article_status_text">Thông báo:</span>
                                            @if (@Model.ListItems[i].FeaturedHome)
                                            {
                                                <a onclick="UpdateFeaturedHome('@ControllerName','@Model.ListItems[i].Ids',false)" class="fas fa-check-circle text-primary" aria-hidden="true"></a>
                                            }
                                            else
                                            {
                                                <a onclick="UpdateFeaturedHome('@ControllerName','@Model.ListItems[i].Ids',true)" class="far fa-times-circle text-danger" aria-hidden="false"></a>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <ul class="list-inline action">
                                            <li class="list-inline-item"><a asp-controller="@ControllerName" asp-action="SaveItem" asp-route-id="@Model.ListItems[i].Ids"><i class="fa fa-edit"></i>Sửa</a></li>
                                            <li class="list-inline-item"><a data-toggle="modal" data-target="#DeleteModal" data-whatever="@Model.ListItems[i].Title" data-ids="@Model.ListItems[i].Ids"><i class="fa fa-trash"></i>Xóa</a></li>
                                        </ul>
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>

                </table>
                <form asp-controller="@ControllerName" asp-action="DeleteItem" id="AjaxDeleteForm"></form>
            </div>
            <div class="col-lg-12">
                @await Html.PartialAsync("_PartialPagination", Model.Pagination)
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/moment.js"></script>
    <script src="~/js/tempusdominus-bootstrap-4.min.js"></script>
    <script type="text/javascript" src="~/js/jquery.base64.min.js"></script>
    <script type="text/javascript" src="~/js/jquery.binarytransport.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#ShowStartDate').datetimepicker({
                format: 'DD/MM/YYYY',

            });
            $('#ShowEndDate').datetimepicker({
                format: 'DD/MM/YYYY',
            });
        });
    </script>

}