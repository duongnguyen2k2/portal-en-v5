@model API.Areas.Admin.Models.NguonGocCayTrong.NguonGocCayTrongModel
@{
    Layout = "_layoutAdmin";
    ViewData["Title"] = "Quản lý Truy xuất Mã số vùng trồng, mã số cơ sở đóng gói";
    string ControllerName = this.ViewContext.RouteData.Values["controller"].ToString();
    string version = DateTime.Now.ToString("yyyyMMddhh");
}

<div class="container-fluid">

    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-header">
                    <h4 class="page-title">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-2">
                        <div class="col-12">
                            <a asp-controller="@ControllerName" asp-action="SaveItem" class="btn btn-primary float-end"><i class="mdi mdi-plus-circle"></i> Thêm mới</a>
                        </div>
                    </div>
                    <partial name="_PartialMsgInfoAdmin" />
                    <div class="table-responsive-sm">

                        <table class="table table-striped table-centered mb-0">
                            <thead>
                                <tr>
                                    <th width="50px" class="text-center">STT</th>
                                    <th>Tên </th>
                                    <th>Code </th>
                                    <th width="150px" class="text-center" data-toggle="tooltip" data-placement="top" title="Trạng thái Hiện/Ẩn">Trạng Thái </th>
                                    <th class="">Latitude</th>
                                    <th class="">Longitude</th>
                                    <th width="100px" class="text-center text-info" data-toggle="tooltip" data-placement="top" title="Mật khẩu mặc định là: Abc@123">Mật Khẩu</th>
                                    <th width="130px" class="btn-contain text-center">
                                        Thao tác
                                    </th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model.ListItems == null || Model.ListItems.Count() == 0)
                                {
                                    <tr>
                                        <td colspan="8" class="text-center">
                                            <label>Không có dữ liệu!</label>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    for (int i = 0; i < Model.ListItems.Count(); i++)
                                    {
                                        <tr>
                                            <td width="50px" class="text-center">@(i + 1)</td>
                                            <td>@Model.ListItems[i].UserName</td>
                                            <td>@Model.ListItems[i].FullName</td>

                                            <td class="text-center">
                                                @if (@Model.ListItems[i].Status)
                                                {
                                                    <span onclick="UpdateStatus('@ControllerName','@Model.ListItems[i].Ids',false)" class="fas fa-check-circle text-primary" aria-hidden="true"></span>
                                                }
                                                else
                                                {
                                                    <span onclick="UpdateStatus('@ControllerName','@Model.ListItems[i].Ids',true)" class="far fa-times-circle text-danger" aria-hidden="false"></span>
                                                }
                                            </td>
                                            <td>@Model.ListItems[i].Latitude</td>
                                            <td>@Model.ListItems[i].Longitude</td>
                                            <td>
                                                <ul class="list-inline action">
                                                    <li class="list-inline-item"><a data-toggle="modal" data-target="#RessetPasswordModal" data-whatever="@Model.ListItems[i].UserName" data-ids="@Model.ListItems[i].Ids"><i class="fas fa-unlock-alt"></i> Phục hồi</a></li>
                                                </ul>

                                            </td>
                                            <td>
                                                <ul class="list-inline action">
                                                    <li class="list-inline-item"><a asp-controller="NhatKyNongHo" asp-action="Index" asp-route-IdNguonGocCayTrong="@Model.ListItems[i].Id" asp-route-IdsNguonGocCayTrong="@Model.ListItems[i].Ids"><i class="fa fa-edit"></i> Xem Nhật Ký</a></li>
                                                    <li class="list-inline-item"><a asp-controller="NhatKyNongHo" asp-action="SaveItem" asp-route-IdNguonGocCayTrong="@Model.ListItems[i].Id" asp-route-IdsNguonGocCayTrong="@Model.ListItems[i].Ids"><i class="fa fa-edit"></i> Thêm nhật ký</a></li>

                                                    <li class="list-inline-item"><a asp-controller="@ControllerName" asp-action="SaveItem" asp-route-id="@Model.ListItems[i].Ids"><i class="fa fa-edit"></i>Sửa</a></li>
                                                    <li class="list-inline-item"><a data-toggle="modal" data-target="#DeleteModal" data-whatever="@Model.ListItems[i].Title" data-ids="@Model.ListItems[i].Ids"><i class="fa fa-trash"></i>Xóa</a></li>
                                                </ul>
                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>

                        </table>
                        <form asp-controller="@ControllerName" asp-action="DeleteItem" id="AjaxDeleteForm"></form>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-lg-12">
            @await Html.PartialAsync("_PartialPagination", Model.Pagination)
        </div>
    </div>


</div>


<div class="modal fade" id="RessetPasswordModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body text-center">
                <p id="reset-title">Bạn có chắc chắn thiết lập lại mật khẩu ?</p>
                <button class="btn btn-warning" data-ids="" id="ResetPasswordItemTrue">Cập nhật mật khẩu</button>
                <button class="btn btn-danger" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script src="~/js/moment.js@("?v="+version)"></script>
    <script src="~/js/tempusdominus-bootstrap-4.min.js@("?v="+version)"></script>

    <script>
        $(function () {
            $('#PublishUpShow').datetimepicker({
                format: 'DD/MM/YYYY HH:mm:ss',
            });
        });


        jQuery('#RessetPasswordModal').on('show.bs.modal', function (event) {
            var button = jQuery(event.relatedTarget); // Button that triggered the modal
            var recipient = button.data('whatever'); // Extract info from data-* attributes
            var ids = button.data('ids');
            var modal = jQuery(this);
            jQuery("#ResetPasswordItemTrue").attr("data-ids", ids);
            modal.find('#reset-title').html('Bạn có chắc chắn thiết lập lại mật khẩu <strong>' + recipient + '</strong>?')
        });

        jQuery('#RessetPasswordModal').on('hide.bs.modal', function (event) {
            console.log("hide.bs.modal");
            $('#reset-title').html('Bạn có chắc chắn thiết lập lại mật khẩu ?')
        });



        $("#ResetPasswordItemTrue").click(function () {

            var form = $('#AjaxDeleteForm');
            var token = jQuery('input[name="__RequestVerificationToken"]', form).val();
            var ids = jQuery("#ResetPasswordItemTrue").attr("data-ids");
            var url = "/Admin/NguonGocCayTrong/RessetPassword?Id=" + ids;
            var headers = {};
            headers["RequestVerificationToken"] = token;
            return $.ajax({
                type: "POST",
                url: url,
                headers: headers,
                data: JSON.stringify({ "Ids": ids }),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    $("#reset-title").html(data.Msg);
                                        
                },
                error: function () {
                    $("#reset-title").html(data.Msg);
                }
            });
        });
    </script>
}