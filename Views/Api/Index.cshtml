@model API.Areas.Admin.Models.CategoriesArticles.CategoriesArticlesModel
@using Microsoft.Extensions.Options
@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;
@{
    Layout = "Templates/" + Context.Session.GetString("TemplateName") + "/_LayoutNone";    
    string ControllerName = this.ViewContext.RouteData.Values["controller"].ToString();

    string StrThongTinCoQuan = Context.Session.GetString("ThongTinCoQuan");
    API.Areas.Admin.Models.DMCoQuan.DMCoQuan ItemCoQuan = new API.Areas.Admin.Models.DMCoQuan.DMCoQuan();
    ItemCoQuan = JsonConvert.DeserializeObject<API.Areas.Admin.Models.DMCoQuan.DMCoQuan>(StrThongTinCoQuan);

    ViewData["Title"] = "API " + " - " + ItemCoQuan.Title;

}

<div class="row">
    <div class="col-lg-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
            </ol>
        </nav>
    </div>
</div>
<div class="row page-rss">
    <div class="col-12">
       
        <div class="wrap-list-rss">
            <div class="row list-rss ">
                <div class="col-12 col-md-6 rss-item"><a title="Tin nổi bật" asp-controller="Api" asp-action="Featured">Tin nổi bật <span class="icon-rss">API <img src="~/images/json-32.png"/></span></a></div>
                <div class="col-12 col-md-6 rss-item"><a title="Thông báo" asp-controller="Api" asp-action="Notification">Thông báo <span class="icon-rss">API <img src="~/images/json-32.png"/></i></span></a></div>

                @if(Model.ListItems!=null && Model.ListItems.Count() > 0)
                {
                    for(int i = 0; i < Model.ListItems.Count(); i++)
                    {
                        <div class="col-12 col-md-6 rss-item"><a title="@Model.ListItems[i].TitleRoot" asp-controller="Api" asp-action="GetByCat" asp-route-id="@Model.ListItems[i].Id" asp-route-alias="@Model.ListItems[i].Alias">@Html.Raw(Model.ListItems[i].TitleRoot)<span class="icon-rss">API <img src="~/images/json-32.png"/></span></a></div>
                    }
                }
                
            </div>
        </div>

    </div>
</div>

<link rel="stylesheet" href="~/css/rss.css" />