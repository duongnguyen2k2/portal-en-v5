@model API.Areas.Admin.Models.Contacts.ContactsModel
@using Microsoft.Extensions.Options
@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;
@inject IViewLocalizer Localizer;
@{
    Layout = "Templates/" + Context.Session.GetString("TemplateName") + "/_LayoutNoneCaptcha";
    string Domain = "";
    if (Context.Request.IsHttps)
    {
        Domain = "https://" + Context.Request.Host;
    }
    else
    {
        Domain = "http://" + Context.Request.Host;
    }
    string ControllerName = this.ViewContext.RouteData.Values["controller"].ToString();
    string StrThongTinCoQuan = Context.Session.GetString("ThongTinCoQuan");
    API.Areas.Admin.Models.DMCoQuan.DMCoQuan ItemCoQuan = new API.Areas.Admin.Models.DMCoQuan.DMCoQuan();
    ItemCoQuan = JsonConvert.DeserializeObject<API.Areas.Admin.Models.DMCoQuan.DMCoQuan>(StrThongTinCoQuan);

    ViewData["Title"] = "Liên Hệ "+ " | "+ ItemCoQuan.Title;
    ViewData["Description"] = "Liên hệ";
    ViewData["Keywords"] = "Liên hệ";
    ViewData["Url"] = Domain + "/lien-he.html";
    ViewData["Images"] = Domain + "/avatar_lien_he.jpg?v=" + DateTime.Now.ToString("yyyyMMddhh");
    ViewData["Alias"] = "Liên hệ";
    ViewData["Type"] = "article";

}


<section id="contact" class="contact">
    <div class="aos-init aos-animate" data-aos="fade-up">

        <div class="section-title-contact">
            <h2>@Localizer["Contact"]</h2>
            <h3><span>@ItemCoQuan.Title</span></h3>            
        </div>

        <div class="row aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">
            <div class="col-lg-6">
                <div class="info-box mb-4">
                    <i class="fas fa-map-marker-alt"></i>
                    <h3>@Localizer["Address"]</h3>
                    <p>@ItemCoQuan.Address</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="info-box  mb-4">
                    <i class="far fa-envelope"></i>
                    <h3>@Localizer["Email"]</h3>
                    <a href="mailto:@ItemCoQuan.Email">@ItemCoQuan.Email</a>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="info-box  mb-4">
                    <i class="fas fa-phone-volume"></i>
                    <h3>@Localizer["Phone"]</h3>
                    <a href="mailto:@ItemCoQuan.Telephone">@ItemCoQuan.Telephone</a>
                </div>
            </div>

        </div>

        <div class="row aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">

            <div class="col-lg-6 ">
                @Html.Raw(ItemCoQuan.MetadataCV.LinkBanDo)
            </div>

            <div class="col-lg-6">

                <div asp-validation-summary="All" class="text-danger"></div>
                <partial name="_PartialMsgInfo" />
                <form asp-controller="@ControllerName" asp-action="Detail" method="post" class="php-email-form">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="Item.Fullname">@Localizer["Full Name"]<sup class="text-danger"> (*)</sup></label>
                                <input type="text" class="form-control" asp-for="Item.Fullname" name="Fullname">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="Item.Phone">@Localizer["Phone"]</label>
                                <input type="text" class="form-control" asp-for="Item.Phone" name="Phone">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="Item.Address">@Localizer["Address"]</label>
                                <input type="text" class="form-control" asp-for="Item.Address" name="Address">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="Item.Email">@Localizer["Email"]</label>
                                <input type="text" class="form-control" asp-for="Item.Email" name="Email">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Item.Title">@Localizer["Title"]<sup class="text-danger"> (*)</sup></label>
                        <input type="text" asp-for="Item.Title" name="Title" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Item.Introtext">@Localizer["Question"]<sup class="text-danger"> (*)</sup></label>
                        <textarea asp-for="Item.Introtext" name="Introtext" class="form-control"></textarea>
                    </div>
                    <div class="row">

                        <div class="col-lg-12 col-12 text-center">
                            <button type="submit" class="btn btn-primary btn-sm" name="SaveItem"><i class="far fa-paper-plane"></i>@Localizer["Sent"]</button>
                            <a class="btn btn-info btn-sm" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i>@Localizer["Home"]</a>
                        </div>
                    </div>


                    <input type="hidden" class="form-control" asp-for="Item.Id" name="Id">
                    <input type="hidden" class="form-control" asp-for="Item.Ids" name="Ids">
                    <input type="hidden" class="form-control" name="Token" id="token_recaptcha">
                </form>
            </div>

        </div>

    </div>
</section>
