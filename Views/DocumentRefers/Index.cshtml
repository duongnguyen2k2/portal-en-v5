@model API.Areas.Admin.Models.DocumentRefers.DocumentRefersModel
@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;

@{
    Layout = "Templates/" + Context.Session.GetString("TemplateName") + "/_LayoutNone";

    
    string ControllerName = this.ViewContext.RouteData.Values["controller"].ToString();
    string StrThongTinCoQuan = Context.Session.GetString("ThongTinCoQuan");
    API.Areas.Admin.Models.DMCoQuan.DMCoQuan ItemCoQuan = new API.Areas.Admin.Models.DMCoQuan.DMCoQuan();
    ItemCoQuan = JsonConvert.DeserializeObject<API.Areas.Admin.Models.DMCoQuan.DMCoQuan>(StrThongTinCoQuan);

    ViewData["Title"] = "Tài liệu tham khảo " + " | " + ItemCoQuan.Title;


}

<div class="row">
    <div class="col-md-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                @if (Model.Categories == null || Model.Categories.Id == 0)
                {
                    <li class="breadcrumb-item active" aria-current="page">Tài liệu</li>
                }
                else
                {
                    <li class="breadcrumb-item" aria-current="page"><a href="/tai-lieu-tham-khao.html">Tài liệu</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Categories.Title</li>
                }

            </ol>
        </nav>
    </div>
</div>

<div class="container ContentDiv">
    <div class="row">
        <div class="col-12">
            <div class="PageDetail">

                <div class="greyDiv searchDiv">
                    <form asp-controller="@ControllerName" asp-action="Index" method="GET">
                        <div class="row">
                            <div class="col-12 col-lg-4 col-md-3 col-sm-5">
                                <div class="form-group">
                                    <label class="d-none d-sm-block" asp-for="SearchData.Keyword">Từ khóa</label>
                                    <input type="text" class="form-control" asp-for="SearchData.Keyword" name="Keyword" placeholder="Nhập từ khóa">
                                </div>
                            </div>

                            <div class="col-12 col-lg-4 col-md-3 col-sm-5">
                                <div class="form-group">
                                    <label class="d-none d-sm-block" asp-for="SearchData.CatId">Danh mục </label>
                                    <select asp-for="SearchData.CatId" name="CatId" class="form-control" asp-items="Model.ListDocumentsCategories"></select>
                                </div>
                            </div>

                            <div class="col-12 col-lg-2 col-md-2 col-sm-2">
                                <div class="form-group mb-0" id="btn-search">
                                    <label class="d-none d-sm-block">&nbsp;</label>
                                    <div class="text-center">
                                        <input type="submit" class="btn btn-primary" name="Search" value="Tìm kiếm" />
                                    </div>
                                </div>

                            </div>
                        </div>


                    </form>
                </div>

                <div class="d-none d-sm-block">
                    <table class="table table-bordered myTable" style="margin-top: 15px;">
                        <thead>
                            <tr>
                                <th width="50px" class="text-center">STT</th>
                                <th>Tên tài liệu</th>
                                <th width="200px" class="text-center">Tác giả</th>
                                <th width="150px">Ngày cập nhật</th>
                                <th width="100px">Xem</th>
                                <th width="100px">Tải về</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ListItems == null || Model.ListItems.Count() == 0)
                            {
                                <tr>
                                    <td colspan="5">Không có văn bản nào</td>
                                </tr>
                            }
                            else
                            {
                                for (int i = 0; i < Model.ListItems.Count(); i++)
                                {
                                    <tr>
                                        <td class="text-center">@(i + 1)</td>
                                        <td>
                                            <a asp-controller="DocumentRefers" asp-action="Detail" asp-route-id="@Model.ListItems[i].Id" asp-route-alias="@Model.ListItems[i].Alias">
                                                <i class="fas fa-book"></i> @Model.ListItems[i].Title
                                            </a>
                                        </td>
                                        <td class="text-center">
                                            @Model.ListItems[i].Author
                                        </td>
                                        <td class="text-center">@Model.ListItems[i].IssuedDate.ToString("dd/MM/yyyy")</td>
                                        <td class="text-center">
                                            <a asp-controller="DocumentRefers" asp-action="Detail" asp-route-id="@Model.ListItems[i].Id" asp-route-alias="@Model.ListItems[i].Alias"><i class="fas fa-binoculars"></i></a>
                                        </td>

                                        <td class="text-center">
                                            @if (!string.IsNullOrEmpty(Model.ListItems[i].Link))
                                            {
                                                <a href="@Model.ListItems[i].Link" target="_blank"> <i class="fa fa-download" style="margin-right:7px"></i> Tải về</a>
                                            }
                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-md-12">
                            @await Html.PartialAsync("_PartialPagination", Model.Pagination)
                        </div>

                    </div>
                </div><!--End ban desktop-->

                <div class=" d-block d-sm-none">
                    @if (Model.ListItems == null || Model.ListItems.Count() == 0)
                    {
                        <label>Không có dữ liệu!</label>
                    }
                    else
                    {
                        @for (int i = 0; i < Model.ListItems.Count(); i++)
                        {
                            <div class="list-group-mobile-item">
                                <div class="row">
                                    <div class="col-12">
                                        <span><strong>@Model.ListItems[i].Title</strong></span> <br />
                                        <span><strong>Tác giả:</strong> @Model.ListItems[i].Author</span>
                                        <span>@Model.ListItems[i].IssuedDate.ToString("dd/MM/yyyy")</span>                                                                                                                      
                                        <span> <a asp-controller="DocumentRefers" asp-action="Detail" asp-route-id="@Model.ListItems[i].Id" asp-route-alias="@Model.ListItems[i].Alias"><strong>Chi Tiết:</strong> <i class="fas fa-binoculars"></i> </a></span>
                                    </div>

                                </div>
                            </div>
                        }
                    }
                    <div class="mt-2">
                        @await Html.PartialAsync("_PartialPagination", Model.PaginationMobile)
                    </div>
                </div>
            </div>

            
        </div>
    </div>
</div>


