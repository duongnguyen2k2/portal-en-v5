@model API.Models.Home.PartialNewFeatured;
@using API.Areas.Admin.Models.DMCoQuan;
@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;
@{
    int IdCoQuan = int.Parse(Context.Session.GetString("DomainId").ToString());
    List<API.Areas.Admin.Models.Articles.Articles> ListArticlesHot = API.Areas.Admin.Models.Articles.ArticlesService.GetListHot(IdCoQuan);
    List<API.Areas.Admin.Models.Articles.Articles> NewsList = new List<API.Areas.Admin.Models.Articles.Articles>();
    DMCoQuan ItemCoQuan = JsonConvert.DeserializeObject<DMCoQuan>(Context.Session.GetString("ThongTinCoQuan"));
    
    if (ItemCoQuan.ThongBao.ToLower() == "tb_tmduoinb")
    {
        NewsList = API.Areas.Admin.Models.Articles.ArticlesService.GetListNew(0, 5, IdCoQuan);
    }
    int countBanner9 = 0;
    if (Model.ListBanners != null && Model.ListBanners.Count() > 0)
    {
        @for (int i = 0; i < Model.ListBanners.Count(); i++)
        {
            if (Model.ListBanners[i].CatId == 9)
            {
                countBanner9 = countBanner9 + 1;
            }
        }
    }

    string class_banner_9_ct = "banner-93-";
    if (countBanner9 == 2)
    {

        class_banner_9_ct = "banner-92-";
    }
    if (countBanner9 == 4)
    {
        class_banner_9_ct = "banner-94-";
    }
    int bannerCount = 0;
    string active = "active";
}
<section id="features-wrap">
    <div class="card card-style-two border-0 features-header">
        <h4 class="featured-news-home">
            <a class="text-uppercase font-weight-bold" asp-controller="Articles" asp-action="Featured">
                <span>TIN NỔI BẬT</span> <i class="fas fa-chevron-right pl-2"></i>
            </a>                    
        </h4>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    @if (ListArticlesHot != null && ListArticlesHot.Count() > 0)
                    {
                        @for (int i = 0; i < ListArticlesHot.Count(); i++)
                        {

                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <div class="features-item">
                                    <a class="img" asp-controller="Articles" asp-action="Detail" asp-route-id="@ListArticlesHot[i].Id" asp-route-alias="@ListArticlesHot[i].Alias" title="@ListArticlesHot[i].Title">
                                        <img src="@ListArticlesHot[i].Images" class="d-block w-100" />
                                    </a>
                                    <div class="features-item-body">
                                        <h1 class="title">
                                            <a asp-controller="Articles" asp-action="Detail" asp-route-id="@ListArticlesHot[i].Id" asp-route-alias="@ListArticlesHot[i].Alias" title="@ListArticlesHot[i].Title">
                                                @ListArticlesHot[i].Title
                                                <small>(@ListArticlesHot[i].PublishUpShow)</small>
                                            </a>
                                        </h1>
                                        <p class="overview">
                                            @Html.Raw(API.Models.MyHelper.StringHelper.StringReadmore(ListArticlesHot[i].IntroText, 200))
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                    }

                </div>

            </div>
        </div>
        <div class="col-md-6">
            <ul class="list-group features-list scrollWrap">
                @if (ListArticlesHot != null && ListArticlesHot.Count() > 0)
                {
                @* <li class="features-list-item">
                    <img src="@ListArticlesHot[0].Images" style="height:70px; width:115px;" />
                    <a asp-controller="Articles" asp-action="Detail" asp-route-id="@ListArticlesHot[0].Id" asp-route-alias="@ListArticlesHot[0].Alias" title="@ListArticlesHot[0].Title">
                        @ListArticlesHot[0].Title
                    </a>
                    <span class="clearfix"></span>
                </li> *@

                    @if (ListArticlesHot.Count() > 1) {                                                            
                        @for (int i = 0; i < ListArticlesHot.Count(); i++)
                        {
                            @* <li class="features-list-item">
                                <a asp-controller="Articles" asp-action="Detail" asp-route-id="@ListArticlesHot[i].Id" asp-route-alias="@ListArticlesHot[i].Alias" title="@ListArticlesHot[i].Title">
                                    @ListArticlesHot[i].Title
                                    <small>(@ListArticlesHot[i].PublishUpShow)</small>
                                </a>
                            </li> *@

                            <li class="features-list-item">
                                <img src="@ListArticlesHot[i].Images" style="height:70px; width:115px;" />
                                <a asp-controller="Articles" asp-action="Detail" asp-route-id="@ListArticlesHot[i].Id" asp-route-alias="@ListArticlesHot[i].Alias" title="@ListArticlesHot[i].Title">
                                    @ListArticlesHot[i].Title
                                </a>
                                <small>(@ListArticlesHot[i].PublishUpShow)</small>
                                <span class="clearfix"></span>
                            </li>

                        }
                    }
                }

            </ul>
        </div>
    </div>
</section>

@if (ItemCoQuan.ThongBao.ToLower() == "tb_tmduoinb")
{
    <section id="tinmoi-home">
        <div class="row">
            <div class="col-12">
                <div class="card border-0 list-item-home">
                    <div class="card-header">
                        <div class="panel-title">
                            <a class="text-uppercase font-weight-bold float-left">                                
                                <span class="pl-2 pr-2">TIN MỚI</span>
                            </a>
                        </div>
                    </div>
                    <div class="card-body p-0 m-0">
                        <div class="banner-tinmoi-anh">
                            <div class="owl-carousel owl-theme albums-item" id="banner-tinmoi-anh-body">
                                @if (NewsList != null && NewsList.Count() > 0)
                                {
                                    for (int i = 0; i < NewsList.Count(); i++)
                                    {
                                        <div class="item">
                                            <a asp-controller="Articles" asp-action="Detail" asp-route-id="@NewsList[i].Id" asp-route-alias="@NewsList[i].Alias" title="@NewsList[i].Title">
                                                <img src="@NewsList[i].Images" title="@NewsList[i].Title" />
                                                <div class="tinmoi-title">
                                                    @NewsList[i].Title
                                                </div>
                                            </a>
                                            
                                        </div>
                                    }
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
}
@if (countBanner9 > 0)
{
    <section id="banner-bottom-featured">
        <div class="carousel slide banner-bottom-featured-body"  data-ride="carousel">
             
            @if (Model.ListBanners != null && Model.ListBanners.Count() > 0)
            {
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.ListBanners.Count(); i++)
                    {
                        if (Model.ListBanners[i].CatId == 9)
                        {
                            bannerCount = bannerCount + 1;
                            
                            if (bannerCount == 1)
                            {
                                active = "active";
                            }
                            else {
                                active = "rong";
                            }

                            <div class="carousel-item banner-bottom-featured-item @class_banner_9_ct@(bannerCount) @active">
                                <a href="@Model.ListBanners[i].Link"> <img src="@Model.ListBanners[i].Image" alt="@Model.ListBanners[i].Title" class="d-block w-100"></a>
                            </div>

                        }
                    }
                </div>
            }

        </div>
    </section>
}
