@model API.Models.Home.PartialNewFeatured;
@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;
@using Microsoft.Extensions.Configuration;
@inject IConfiguration Configuration;
@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization;
@inject IViewLocalizer Localizer
@{
    int IdCoQuan = int.Parse(Context.Session.GetString("DomainId").ToString());
    //List<API.Areas.Admin.Models.Articles.Articles> Model.ListHotArticles = API.Areas.Admin.Models.Articles.ArticlesService.GetListHot(IdCoQuan);

    string StrThongTinCoQuan = Context.Session.GetString("ThongTinCoQuan");
    API.Areas.Admin.Models.DMCoQuan.DMCoQuan ItemCoQuan = new API.Areas.Admin.Models.DMCoQuan.DMCoQuan();
    ItemCoQuan = JsonConvert.DeserializeObject<API.Areas.Admin.Models.DMCoQuan.DMCoQuan>(StrThongTinCoQuan);

    int countBanner9 = 0;
    if (Model.ListBanners != null && Model.ListBanners.Count() > 0)
    {
        @for (int i = 0; i < Model.ListBanners.Count(); i++)
        {
            if (Model.ListBanners[i].CatId == 9)
            {
                countBanner9 = countBanner9 + 1;
            }
        }
    }


    string class_banner_9_ct = "banner-93-";
    if (countBanner9 == 2)
    {

        class_banner_9_ct = "banner-92-";
    }
    if (countBanner9 == 4)
    {
        class_banner_9_ct = "banner-94-";
    }
    int bannerCount = 0;
}
<section id="features-wrap" data-partal="/ThemeCNT/_PartialNewFeatured" class="mb-0">
    <div class="category-list">
        <div class="card border-0 cat-item">
            <div class="card-header d-flex">
                <ul class="list-inline flex-fill">
                    <li>
                        <div class="category-list-title colored">
                            <a class="text-uppercase font-weight-bold float-left" asp-controller="Articles" asp-action="Featured">
                                <span class="category-list-title-icon"><i class="fab fa-hotjar"></i></span>
                                <span class="pl-2">@Localizer["FearuredNewHome"]</span>
                            </a>
                        </div>
                    </li>
                </ul>
                <ul class="list-inline flex-fill">
                    <li>
                        <div class="category-list-title pr-1">
                            <nav class="nav nav-underline m-0 justify-content-end">
                                <i class="fa fa-caret-right mr-2 mt-1 py-auto text-black-50" aria-hidden="true"></i>
                                <a class="nav-link" asp-controller="Articles" asp-action="Featured">@Localizer["Showmore"]</a>
                            </nav>
                        </div>
                    </li>

                </ul>
            </div>
        </div>
    </div>

    <div class="row mt-1">
        <div class="col-12 col-lg-7 features-wrap-left pb-2">

            <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                <!-- Wrapper for slides --> 
                <div class="carousel-inner" role="listbox">
                    @if (Model.ListHotArticles != null && Model.ListHotArticles.Count() > 0)
                    {
                        @for (int i = 0; i < Model.ListHotArticles.Count(); i++)
                        {

                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <div class="features-item">
                                    <div class="flag-date-publish">
                                        <h6>@(Model.ListHotArticles[i].PublishUpShow.Split("/")[1].Contains("0") ? Model.ListHotArticles[i].PublishUpShow.Split("/")[1].Replace("0", "T") : string.Concat("T", Model.ListHotArticles[i].PublishUpShow.Split("/")[1]))</h6>
                                        <h6>@Model.ListHotArticles[i].PublishUpShow.Split("/")[0]</h6>
                                    </div>

                                    <a asp-controller="Articles" asp-action="Detail" asp-route-id="@Model.ListHotArticles[i].Id" asp-route-alias="@Model.ListHotArticles[i].Alias" title="@Model.ListHotArticles[i].Title">
                                        <img src="@Model.ListHotArticles[i].Images" style="width:100%;max-height:400px;" class="img-fluid" />
                                    </a>
                                    <div class="features-item-body">
                                        <h1 class="title">
                                            <a asp-controller="Articles" asp-action="Detail" asp-route-id="@Model.ListHotArticles[i].Id" asp-route-alias="@Model.ListHotArticles[i].Alias" title="@Model.ListHotArticles[i].Title">
                                                @Model.ListHotArticles[i].Title
                                            </a>
                                        </h1>
                                        <p class="overview">
                                            @Html.Raw(API.Models.MyHelper.StringHelper.StringReadmore(Model.ListHotArticles[i].IntroText, 200))
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                    }

                </div>

                <div class="d-flex justify-content-between mt-2">
                    <div class="indicator">
                        <ol class="carousel-indicators">
                            @if (Model.ListHotArticles != null && Model.ListHotArticles.Count() > 0)
                            {
                                @for (int i = 0; i < Model.ListHotArticles.Count(); i++)
                                {
                                    <li data-target="#carouselExampleSlidesOnly" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                                }
                            }
                        </ol>
                    </div>

                    <div class="carousel-controller d-flex">
                        <button class="carousel-control-prev" type="button" data-target="#carouselExampleSlidesOnly" data-slide="prev">
                            <i class="fa fa-arrow-left" aria-hidden="true"></i>
                        </button>
                        <button class="carousel-control-next" type="button" data-target="#carouselExampleSlidesOnly" data-slide="next">
                            <i class="fa fa-arrow-right" aria-hidden="true"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-5 features-wrap-right pb-2">
            @if (Model.ListHotArticles != null && Model.ListHotArticles.Count() > 0)
            {
                <a asp-controller="Articles" asp-action="Detail" asp-route-id="@Model.ListHotArticles[0].Id" asp-route-alias="@Model.ListHotArticles[0].Alias" title="@Model.ListHotArticles[0].Title">
                    <div class="card article-item">
                        <div class="flag-date-publish">
                            <h6>@(Model.ListHotArticles[0].PublishUpShow.Split("/")[1].Contains("0") ? Model.ListHotArticles[0].PublishUpShow.Split("/")[1].Replace("0", "T") : string.Concat("T", Model.ListHotArticles[0].PublishUpShow.Split("/")[1]))</h6>
                            <h6>@Model.ListHotArticles[0].PublishUpShow.Split("/")[0]</h6>
                        </div>
                        <img src="@Model.ListHotArticles[0].Images" class="card-img-top" alt="@Model.ListHotArticles[0].Title">
                        <div class="card-body p-1">
                            <h6 class="card-title">@Model.ListHotArticles[0].Title</h6>
                            @*<i class="fa fa-calendar" aria-hidden="true"></i>
                            <span>@Model.ListHotArticles[0].PublishUpShow</span>*@
                        </div>
                    </div>
                </a>
            }

            <div class="sub-article-list">
                @if (Model.ListHotArticles != null && Model.ListHotArticles.Count() > 1)
                {
                    <div class="row">
                        @for (int m = 1; m < Model.ListHotArticles.Count() - 3; m++)
                        {
                            <div class="mb-2 col-12">
                                <div class="first-article-item h-100">
                                    <div class="flag-date-publish">
                                        <h6>@(Model.ListHotArticles[m].PublishUpShow.Split("/")[1].Contains("0") ? Model.ListHotArticles[m].PublishUpShow.Split("/")[1].Replace("0", "T") : string.Concat("T", Model.ListHotArticles[m].PublishUpShow.Split("/")[1]))</h6>
                                        <h6>@Model.ListHotArticles[m].PublishUpShow.Split("/")[0]</h6>
                                    </div>
                                    <a class="d-flex" asp-controller="Articles" asp-action="Detail" asp-route-id="@Model.ListHotArticles[m].Id" asp-route-alias="@Model.ListHotArticles[m].Alias" title="@Model.ListHotArticles[m].Title">
                                        <div class="img">
                                            @if (Model.ListHotArticles[m].Images == null || Model.ListHotArticles[m].Images == "" || Model.ListHotArticles[m].Images.ToLower() == "/cms/content/tintuc/")
                                            {
                                                <img src="~/images/no-image.png" class="w-100">
                                            }
                                            else
                                            {
                                                <img src="@Model.ListHotArticles[m].Images" class="w-100">
                                            }
                                        </div>

                                        <div class="first-article-body">
                                            <p class="m-0 mb-1 title truncate-title">
                                                @Model.ListHotArticles[m].Title
                                            </p>
                                            <p class="m-0 cat-desc truncate-content">
                                                @API.Models.MyHelper.StringHelper.StringReadmore(Model.ListHotArticles[m].IntroText, 200)
                                            </p>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        }
                    </div>

                }
            </div>
        </div>
    </div>
</section>

@if (countBanner9 > 0)
{
    if ((ItemCoQuan.ParentId == 2|| ItemCoQuan.ParentId == 6) && Configuration["Security:SiteCode"] == "DLK")
    {
        <section id="banner-bottom-featured">
            <div class="banner-bottom-featured-body">
                @if (Model.ListBanners != null && Model.ListBanners.Count() > 0)
                {
                    @for (int i = 0; i < Model.ListBanners.Count(); i++)
                    {
                        if (Model.ListBanners[i].CatId == 9)
                        {
                            bannerCount = bannerCount + 1;

                            <div class="banner-bottom-featured-item @class_banner_9_ct@(bannerCount)">
                                <a href="@Model.ListBanners[i].Link"> <img src="@Model.ListBanners[i].Image" alt="@Model.ListBanners[i].Title" class="d-block w-100"></a>
                            </div>

                        }
                    }
                }
            </div>
        </section>
    }
    else { 
    
        <div id="banner-bottom-featured" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @if (Model.ListBanners != null && Model.ListBanners.Count() > 0)
                {

                    @for (int i = 0; i < Model.ListBanners.Count(); i++)
                    {

                        if (Model.ListBanners[i].CatId == 9)
                        {
                            bannerCount = bannerCount + 1;


                            @if (bannerCount == 1)
                            {
                                <div class="carousel-item active">
                                    <img src="@Model.ListBanners[i].Image" class="d-block w-100 " alt="@Model.ListBanners[i].Title">
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item ">
                                    <img src="@Model.ListBanners[i].Image" class="d-block w-100" alt="@Model.ListBanners[i].Title">
                                </div>
                            }


                        }
                    }
                }

            </div>
        </div>

        }

    }
