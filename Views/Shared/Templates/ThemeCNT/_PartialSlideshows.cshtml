                    }

                }
            </ol>*@

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                @for (int i = 0; i < ListItems.Count(); i++)
                {

                    if (ListItems[i].CatId == 1)
                    {
                        carousel = carousel + 1;
                        @if (carousel > 1) { str = ""; }
                        <div class="carousel-item @str">
                            <a href="@ListItems[i].Link">
                                <img src="@ListItems[i].Image" class="d-block w-100" alt="@ListItems[i].Title" />
                            </a>
                        </div>

                    }

                }
            </div>

        </div>
    </div>
