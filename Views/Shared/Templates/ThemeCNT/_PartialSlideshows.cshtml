    int indicators = 0;
    int carousel = 0;

    string str = "active";
    string str_2 = "active";

    var ListItems = API.Areas.Admin.Models.Banners.BannersService.GetListByCat(1, 4, 1, CultureInfo.CurrentCulture.Name.ToLower());
}

@if (ListItems != null && ListItems.Count() > 0)
{
<div class="row">
    <div id="block-slideshow">

        <div id="carousel-example-generic" class="carousel slide carousel-fade" data-ride="carousel">
