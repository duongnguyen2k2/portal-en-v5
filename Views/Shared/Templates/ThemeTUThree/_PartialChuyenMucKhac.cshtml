@model API.Areas.Admin.Models.Banners.BannersModel
@{
    List<API.Areas.Admin.Models.Banners.Banners> ListItem2 = new List<API.Areas.Admin.Models.Banners.Banners>();

    @for (int i = 0; i < Model.ListItems.Count(); i++)
    {
        if (Model.ListItems[i].CatId == 4)
        {
            ListItem2.Add(Model.ListItems[i]);
        }

    }
}
@if (ListItem2 != null && ListItem2.Count() > 0)
{
<div class="chuyen-muc-khac" data-id="4">
    <div class="chuyen-muc-khac-header">
        <h3>CÁC CHUYÊN MỤC KHÁC</h3>
    </div>
    <div class="chuyen-muc-khac-body">
        <!---------Banner Right Bottom ---------->
        
            @for (int i = 0; i < Model.ListItems.Count(); i++)
            {
                if (Model.ListItems[i].CatId == 4)
                {
                    <div class="banner-item">
                        <a href="@Model.ListItems[i].Link" target="@Model.ListItems[i].Target">
                            <img src="@Model.ListItems[i].Image" class="d-block w-100" title="@Model.ListItems[i].Title" />
                        </a>
                    </div>
                }

            }
        
    </div>
</div>
}