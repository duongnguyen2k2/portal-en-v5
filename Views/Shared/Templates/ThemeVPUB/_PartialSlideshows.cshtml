@model API.Areas.Admin.Models.Banners.BannersModel
@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization;
@inject IViewLocalizer Localizer
@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json;
@using API.Areas.Admin.Models.DMCoQuan;

@{
    string ControllerName = this.ViewContext.RouteData.Values["controller"].ToString();
    string ActionName = this.ViewContext.RouteData.Values["action"].ToString();
    int indicators = 0;
    int carousel = 0;

    string str = "active";
    string str_2 = "active";
    string StrThongTinCoQuan = Context.Session.GetString("ThongTinCoQuan");
    API.Areas.Admin.Models.DMCoQuan.DMCoQuan ItemCoQuan = new API.Areas.Admin.Models.DMCoQuan.DMCoQuan();
    ItemCoQuan = JsonConvert.DeserializeObject<API.Areas.Admin.Models.DMCoQuan.DMCoQuan>(StrThongTinCoQuan);
    
    string Culture = API.Models.MyHelper.StringHelper.ConverLan(CultureInfo.CurrentCulture.Name);
    string Thu = API.Models.MyHelper.StringHelper.DayweekVN(DateTime.Now);
    if (Culture == "en")
    {
        Thu = DateTime.Now.DayOfWeek.ToString();
    }
    string SearchKey = "";
    if (this.ViewContext.HttpContext.Request.Query["keyword"].ToString() != "" && ControllerName.ToLower() == "home" && ActionName.ToLower() == "search")
    {
        SearchKey = this.ViewContext.HttpContext.Request.Query["keyword"].ToString();
    }
}

@if (Model.ListItems != null && Model.ListItems.Count() > 0)
{
    <div id="block-slideshow">


        <div id="carousel-slideshow" class="carousel slide carousel-fade" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                @for (int i = 0; i < Model.ListItems.Count(); i++)
                {
                    if (Model.ListItems[i].CatId == 1)
                    {
                        indicators = indicators + 1;
                        @if (indicators > 1) { str_2 = ""; }
                        <li data-target="#carousel-slideshow" data-slide-to="@indicators" class="@str_2"></li>

                    }

                }
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                @for (int i = 0; i < Model.ListItems.Count(); i++)
                {

                    if (Model.ListItems[i].CatId == 1)
                    {
                        carousel = carousel + 1;
                        @if (carousel > 1) { str = ""; }
                        <div class="carousel-item  @str">
                            <a href="@Model.ListItems[i].Link">
                                <img src="@Model.ListItems[i].Image?v=@DateTime.Now.ToString("yyyyMMdd")" alt="@Model.ListItems[i].Title" />
                            </a>
                        </div>

                    }

                }
            </div>

            <button class="carousel-control-prev" type="button" data-target="#carousel-slideshow" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-target="#carousel-slideshow" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </button>

        </div>
    </div>

    <div class="subheader d-none d-sm-block">
        <div class="content-subheader">
            <span class="curentDate">@Thu, @Localizer["Day"] @DateTime.Now.ToString("dd") / @DateTime.Now.ToString("MM") / @DateTime.Now.ToString("yyyy")</span>
            <span class="form-search">
                <form id="search-all" method="get" action="/Home/Search">
                    <span class="line-subheader"></span>
                    <input type="text" id="content-search-all" placeholder="Tìm kiếm" name="keyword">
                    <span class="icon-search" id="btn-search-all" onclick="SubmitSearch()"><i class="fa fa-search"></i></span>
                </form>
            </span>
        </div>
    </div>
}