@model API.Areas.Admin.Models.Menus.Menus;
<li>
    <a class="text-uppercase font-weight-bold" href="@Model.Link">@Html.Raw(Model.Title)</a>
    <ul>
        @for (int i = 0; i < Model.ListMenus.Count; i++)
        {
            if (Model.ListMenus[i].Link != null)
            {
                <li><a class="text-uppercase " href="@(Model.ListMenus[i].Link)"><i class="@(Model.ListMenus[i].Icon)"></i>@Html.Raw(Model.ListMenus[i].Title)</a></li>
            }
            else if (Model.ListMenus[i].ArticleId != 0)
            {
                <li><a class="text-uppercase " href="/gioi-thieu.html"> <i class="@(Model.ListMenus[i].Icon)"></i>@Html.Raw(Model.ListMenus[i].Title)</a></li>
            }
            else
            {
                <li><a class="text-uppercase" href="#"><i class="@(Model.ListMenus[i].Icon)"></i>@Html.Raw(Model.ListMenus[i].Title)</a></li>
            }
        }
    </ul>
</li>

