@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;
@{
    string StrThongTinCoQuan = Context.Session.GetString("ThongTinCoQuan");
    API.Areas.Admin.Models.DMCoQuan.DMCoQuan ItemCoQuan = new API.Areas.Admin.Models.DMCoQuan.DMCoQuan();
    ItemCoQuan = JsonConvert.DeserializeObject<API.Areas.Admin.Models.DMCoQuan.DMCoQuan>(StrThongTinCoQuan);
    List<API.Areas.Admin.Models.Videos.Videos> ListItemVideos = API.Areas.Admin.Models.Videos.VideosService.GetListNew(ItemCoQuan.Id);
}
<section class="category-list" id="block-videos-home">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 cat-item">
                <div class="card-header">
                    <div class="panel-title">
                        <a class="text-white text-uppercase font-weight-bold float-left" asp-controller="Videos" asp-action="Index">
                            <span class="pl-2 pr-2">@Localizer["LibraryVideos"]</span>
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            @if (ListItemVideos != null && ListItemVideos.Count() > 0)
                            {
                                <div class="first-article-item">
                                    <a class="img">
                                        @if (ListItemVideos[0].IdType == 1)
                                        {
                                            <img src="https://img.youtube.com/vi/@ListItemVideos[0].Link/0.jpg" style="max-width:180px;max-height:120px;" alt="@ListItemVideos[0].Alias" />
                                        }
                                        else
                                        {
                                            <img src="@ListItemVideos[0].Image" style="max-width:180px;max-height:120px;" alt="@ListItemVideos[0].Alias" />
                                        }
                                    </a>



                                    <div class="first-article-body">
                                        <div class="text-justify m-0 title">
                                            <a  asp-controller="Videos" asp-action="Detail" asp-route-id="@ListItemVideos[0].Id" asp-route-alias="@ListItemVideos[0].Alias" title="@ListItemVideos[0].Title">@ListItemVideos[0].Title</a>
                                            <span class="date">(@ListItemVideos[0].CreatedDate.ToString("dd/MM/yyyy"))</span>
                                        </div>
                                        
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="col-12 ">
                            <ul class="list-unstyled sub-article-list">
                                @if (ListItemVideos != null && ListItemVideos.Count() > 1)
                                {
                                    @for (int m = 1; m < ListItemVideos.Count(); m++)
                                    {
                                        <li> 
                                            <a  asp-controller="Videos" asp-action="Detail" asp-route-id="@ListItemVideos[m].Id" asp-route-alias="@ListItemVideos[m].Alias" title="@ListItemVideos[m].Title"><i class="far fa-arrow-alt-circle-right pr-2"></i>@ListItemVideos[m].Title </a>
                                            <span class="date">(@ListItemVideos[m].CreatedDate.ToString("dd/MM/yyyy"))</span>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>