@model API.Areas.Admin.Models.USUsers.USUsersModel
@using Microsoft.Extensions.Options
@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;
@inject IViewLocalizer Localizer
@{
    Layout = "Templates/" + Context.Session.GetString("TemplateName") + "/_LayoutNone";
    string ControllerName = this.ViewContext.RouteData.Values["controller"].ToString();
    string Domain = "";
    if (Context.Request.IsHttps)
    {
        Domain = "https://" + Context.Request.Host;
    }
    else
    {
        Domain = "http://" + Context.Request.Host;
    }
    ViewData["Title"] = "Tra cứu thông tin nhân sự giáo viên";
    ViewData["Description"] = "Tra cứu thông tin nhân sự giáo viên";
    ViewData["Keywords"] = "Tra cứu thông tin nhân sự giáo viên";
    ViewData["Url"] = Domain + "/tra-cuu-thong-tin.html";
    ViewData["Images"] = "";

}
<link rel="stylesheet" href="~/Templates/ThemeCM/css/user-search.css" />
<div class="row">
    <div class="col-lg-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
            </ol>
        </nav>
    </div>
</div>

<div id="app_users" class="app-vue">
    <div class="row">
        <div class="col-lg-3">
            <div class="form-group">                
                <input type="text" id="Keyword" class="form-control" placeholder="Tìm kiếm theo tên" v-model="SearchItems.Keyword">
            </div>
        </div>
        <div class="col-lg-2">
            <select class="form-control" v-model="SearchItems.IdLevel">
                <option value="0">--- Cấp học ---</option>
                <option v-for="item in ListDMCap" v-bind:value="item.Id">{{ item.Title }}</option>
            </select>
        </div>

        <div class="col-lg-3">
            <select class="form-control" v-model="SearchItems.IdCoQuan">
                <option value="0">--- Trường ---</option>
                <option v-for="item in ListDMCoQuan" v-bind:value="item.Id">{{ item.Title }}</option>
            </select>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <button type="button" v-on:click="SearchChange()" class="btn btn-primary">@Localizer["Search"]</button>
            </div>
        </div>
    </div>

    <div class="row">
        <template v-for="item in ListItems" v-bind:value="item.Id">
            <div class="col-lg-6">
                <div class="card">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            <template v-if="item.Avatar!=null">
                                <img v-bind:src="item.Avatar" style="width:100%" v-bind:alt="item.FullName">
                            </template>
                            <template v-if="item.Avatar==null">
                                <img src="/images/user-avatar.webp" style="width:100%" v-bind:alt="item.FullName">
                            </template>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">{{item.FullName}}</h5>
                                <p class="card-text">
                                    <div><span class="app-info app-user-email">@Localizer["Email"]:</span><span class="app-info-content app-user-email-ct"> {{item.Email}}</span></div>
                                    <div><span class="app-info app-user-tenchucvu">@Localizer["Position"]:</span><span class="app-info-content app-user-tenchucvu-ct"> {{item.TenChucVu}}</span></div>
                                    <div><span class="app-info app-user-telephone">@Localizer["Phone"]:</span><span class="app-info-content app-user-telephone-ct"> {{item.Telephone}}</span></div>
                                    <div><span class="app-info app-user-specialize">@Localizer["Expertise"]:</span><span class="app-info-content app-user-specialize-ct"> {{item.Specialize}}</span></div>
                                </p>                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </template>
    </div>
</div>



@section Scripts{
    <script src="~/js/vue.js"></script>
    <script src="~/js/users.js"></script>
}